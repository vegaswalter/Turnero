    <body>
       
 <div class="contents">

<div class="img">
  <img src="/img/paisajeve.jpg"  alt="">
</div>
  

<form class="box" action="crear" method="POST" enctype="application/x-www-form-urlencoded">

  <h2>Seleccione su Turno</h2>

 <% if (locals && locals.mensajeError) { %>
 <% for ( let error in mensajeError ) { %>
                                <p class="error-msg">
                                    <%= mensajeError[errors].msg %>
                                </p>
                                <% } %>
                              <% } %>

    
<div>
  <input type="radio" id="opcion-1" name="box" value="1" checked>
  <label for="opcion-1">Servicio Tecnico</label>
</div>

<div>
  <input type="radio" id="opcion-2" name="box" value="2">
  <label for="opcion-2">Electricidad</label>
</div>

<div>
  <input type="radio" id="opcion-3" name="box" value="3">
  <label for="opcion-3">Carpinteria</label>
</div>

<input type="hidden" name="code" id="inputCodigo" data-nombre="code">

<input type="hidden" name="condition" value="0" />



 <button class="button-edit" type="submit">Insertar</button>

</form>

<div class="img">
<img src="/img/paisajeve.webp" alt="">
</div>
 
 </div>
